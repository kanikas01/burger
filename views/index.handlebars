<div class="container">

  <div class="row">
    <div id="title" class="col s12 center-align">
      <h1>Eat Da Burger</h1>
    </div>
  </div>

  <div class="row">
    <div class="col s12 center-align">
      <img src="/assets/img/burger.png" alt="hamburger">
    </div>
  </div>
  
  <div class="row">
    <div id="add-burger" class="col push-s2 s8 push-l4 l4 center-align">
      <h3>Add Burger</h3>
      <form class="create-form">
        <div class="form-group">
          {{!-- <label for="burger_name">Burger Name:</label> --}}
          <input type="text" id="burger_name" name="burger_name"><br>
          <button type="submit" class="btn waves-effect waves-light purple darken-2"><i class="material-icons left">restaurant_menu</i>Grill it up!</button>
        </div>
      </form>
    </div>

    <div id="not-devoured" class="col s12 pull-l4 l4 center-align">
      <h3>Order Up!</h3>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              Order #{{id}}<br>{{burger_name}}<br>
              <button class="btn-small waves-effect waves-light purple darken-2 devour" data-id="{{id}}" data-devoured="1"><i class="material-icons left">favorite</i>Devour it!</button>
            </li>     
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  
    <div id="devoured" class="col s12 l4 center-align">
      <h3>Enjoyed</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              Order #{{id}}<br>{{burger_name}}<br>
              <button class="btn-small waves-effect waves-light purple darken-2 delete" data-id="{{id}}"><i class="material-icons left">delete</i>Delete</button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>