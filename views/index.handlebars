<div id="title">
  <h1>Eat Da Burger</h1>
</div>

<div id="not-devoured">
  <h2>Burgers that are not devoured</h2>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        <li>
          {{id}}. {{burger_name}}
          <button class="devour" data-id="{{id}}" data-devoured="1">Devour it!</button>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>


<div id="devoured">
  <h2>Devoured burgers</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        <li>{{id}}. {{burger_name}}</li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div id="add-burger">
  <h2>Add a Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger_name" name="burger_name"><br>
      <button type="submit">Add Burger</button>
    </div>
  </form>
</div>