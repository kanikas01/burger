<div class="container">
  <div class="row">
    <div id="title" class="col s12 center-align">
      <h1>Eat Da Burger</h1>
    </div>
  </div>
  
  <div class="row">
    <div id="add-burger" class="col push-m4 m4">
      <h3>Add a Burger</h3>
      <form class="create-form">
        <div class="form-group">
          <label for="burger_name">Burger Name:</label>
          <input type="text" id="burger_name" name="burger_name"><br>
          <button type="submit">Add Burger</button>
        </div>
      </form>
    </div>

    <div id="not-devoured" class="col pull-m4 m4">
      <h3>Burgers that are not devoured</h3>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{id}}. {{burger_name}}
              <button class="devour" data-id="{{id}}" data-devoured="1">Devour it!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  
    <div id="devoured" class="col m4">
      <h3>Devoured burgers</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{id}}. {{burger_name}}
              <button class="delete" data-id="{{id}}">Delete</button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>