<h1>Eat Da Burger</h1>

<h2>Burgers that are not devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger_name" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Yet Devoured!
  </div>

  <button type="submit">Add Burger</button>
</form>